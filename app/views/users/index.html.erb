<div class="page-header">
  <h1>Usuarios <small>Lista de usuarios</small></h1>
</div>

<table class='table table-hover' >
  <thead>
    <tr>
      <th>Nombre del usuario</th>
      <th>Administrador</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre.capitalize %></td>
        <td><%= user.admin %></td>
        
        <td><%= link_to 'Ver', user_path(user) %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td> <%= link_to 'Eliminar', user_path(user), method: :delete, data: { confirm: 'Â¿Esta seguro de querer eliminar el usuario ' +user.nombre.capitalize+ '?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p> <%= link_to "Crear un nuevo usuario", new_user_path, class: "btn btn-primary" %> </p>
