<div class="page-header">
	<h2><%= @user.nombre %><small> datos</small></h2>
</div>

<table class='table table-hover' >
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Apellido</th>
			<th>Usuario</th>
			<th>Password</th>
			<th>Correo</th>
			<th>Administrador</th>
			<th colspan="6"></th>
		</tr>
	</thead>

	<tbody>

		<tr>
			<td><%= "#{@user.nombre}" %></td>
			<td><%= "#{@user.apellido}" %></td>
			<td><%= "#{@user.usuario}" %></td>
			<td><%= "#{@user.password}" %></td>
			<td><%= "#{@user.correo}" %></td>
			<%if defined?(@user.admin)%>
			<td><%= "#{@user.admin}" %></td>
			<% else %>
			<td>false</td>
			<% end %>
		</tr>

	</tbody>
</table>

<p> <%= link_to "Volver", users_path, class: "btn btn-primary" %> </p>