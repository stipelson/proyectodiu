<%= form_for(@user, :html => { :class=> 'forms' }) do |e| %>

<% @user.errors.full_messages.each do |message| %>
<div class="tools-alert tools-alert-red">
	<strong><%= pluralize(@user.errors.count, " Error, ") %></strong> El <%= message %>
</div>
<% end %>


<%= e.label :nombre do %>
<%= I18n.t('users.formulario.name')%><span class='req'>*</span>
<%= e.text_field(:nombre, class: 'width-100', :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => I18n.t('users.formulario.nameT')) %>
<% end %>

<%= e.label :apellido do %>
<%= I18n.t('users.formulario.surname')%>
<%= e.text_field(:apellido, class: 'width-100') %>
<% end %>

<%= e.label :usuario do %>
<%= I18n.t('users.formulario.user')%><span class='req'>*</span>
<%= e.text_field(:usuario, class: 'width-100', :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => I18n.t('users.formulario.userT')) %>
<div class="forms-desc"><%= I18n.t('users.formulario.userText')%></div>
<% end %>

<%= e.label :password do %>
<%= I18n.t('users.formulario.pass')%><span class="req">*</span>

<%= e.text_field(:password, class: 'width-100', :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => I18n.t('users.formulario.passT')) %>
<% end %>


<%= e.label :correo do %>
<%= I18n.t('users.formulario.email')%><span class="req">*</span>

<%= e.text_field(:correo, class: 'width-100', :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => I18n.t('users.formulario.emailT')) %>
<% end %>

<% if defined?(@permiso_admin) and @permiso_admin %>

<%= e.label :admin do %>
<%= I18n.t('users.formulario.admin')%>
<%= e.check_box (:admin) %>
<% end %>

<% end %>

<p>
	<%= e.submit I18n.t('users.formulario.send'), class: "btn btn-green" %> <%= link_to I18n.t('users.formulario.cancel'), users_path, class: "btn btn-red" %>
</p>

<% end %>