<div class="units-row">

	<div class="unit-60">


		<%= form_for([@article, @petition]) do |f| %>


		<%= f.label :razon do%>
		<%= I18n.t('petitions.form.razon')%>
		<%= f.text_area :razon %>
		<%end%>


	</div>
	<div class= 'unit-40'><br>
		<%= f.submit I18n.t('petitions.form.send'), class: "btn btn-green" %> <%= link_to I18n.t('petitions.form.cancel'), article_path(@article), class: "btn btn-red" %>
	</div>
</div>

<% end %>
