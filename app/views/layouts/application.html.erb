<!DOCTYPE html>
<html>
<head>
	<title>Workspace</title>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.js"></script>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

</head>
<body>
	<div class="units-row">
		<div class="unit-centered unit-100 ">

			<div class="navigation-toggle navigation-toggle-black" data-tools="navigation-toggle" data-target="#navbar-1">
				<span>Menu</span>
			</div>


			<header id="navbar-1" class="group navbar-pills-black-example">
				<div class="unit-centered unit-65 ">
					<nav class="navbar navbar-pills navbar-left ">
						<ul>

							<li <% if @current_pagina == 1 %> class="" <% end %>><strong><%= link_to "TeLoMando", root_path %></strong></a></li>



							<li <% if @current_pagina == 2 %> class="active" <% end %>><a href="#">Ayuda</a></li>
							<% if @sesion %>

							<li><a href="#" data-tools="dropdown" data-target="#dropdown-objetos"><i class="fa fa-bell"></i> Objetos</a></li>

							<% end %>
						</ul>
					</nav>

					<ul id="dropdown-objetos" class="dropdown">
					<li><%= link_to "Objetos que subi", objetos_path(1), :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Los que has encontrado y subido' %></li>
					<li><%= link_to "Objetos que busco", objetos_path(2), :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Los que buscas' %></li>
					<li><%= link_to "Objetos que solicite", objetos_path(3), :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Que alguien mas subio y crees que es tuyo' %></li>


					</ul>

					<nav  class="navbar navbar-pills navbar-right ">
						<ul>

							<% if @permiso_admin %>
							<li><a href="#" data-tools="dropdown" data-target="#dropdown-admin"> Administrar</a></li>

							<% end %>


							<% if @sesion %>

							<li><a href="#" data-tools="dropdown" data-target="#dropdown-user"> Cuenta</a></li>



							<li><%= link_to login_cerrar_sesion_path, id:"logo" do %>
							<i class="fa fa-sign-out"></i> Salir
							<% end %></li>


							<% elsif @sesion == false %>

							<li><%= link_to 'Ingresar', login_iniciar_sesion_path, :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Si ya tiene una cuenta' %></li>

							<li><%= link_to "Registrarse", new_user_path, :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Si aun no tiene una cuenta' %></li>

							<% end %>


						</ul>
					</nav>
				</div>
			</header>

		</div>
	</div>

	<div class="units-row">
		<div class="unit-centered unit-60 ">


			<% if @sesion %>

			<ul id="dropdown-admin" class="dropdown">
				<li><%= link_to "Cuentas de usuarios", users_path, :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Administre los usuarios' %></li>

				<li><%= link_to "Administrar Objetos", articles_path, :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Administre los objetos en la aplicaciÃ³n' %></li>
			</ul>

			<ul id="dropdown-user" class="dropdown">
				<li><%= link_to "Mis datos", edit_user_path(@current_user_id), :'data-theme' => 'blue', :'data-tools' => 'tooltip', :'title' => 'Administre sus datos' %></li>
			</ul>

			<%end%>

			<div class="container">

				<ul class="blocks-2">
					<li></li>
					<li>
						<div class="unit-push-right unit-70">
							<form method="post" action="" class="forms">
								<label class="input-groups">
									<input type="text" name="buscar" placeholder="Buscar" />
									<span class="btn-append">
										<button class="btn btn-blue">Buscar</button>
									</span>
								</label>
							</form>
						</div>
					</li>
				</ul>

				<% flash.each do |key, value| %>

				<div class="tools-alert tools-alert-<%= value[0, value.index('&')] %>">

					<%= value[value.index('&')+1, value.length] %>
				</div>

				<% end %>


				<%= yield %>


			</div>
		</div>
	</div>

</body>
</html>
